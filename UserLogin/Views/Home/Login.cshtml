@model UserLogin.Models.TblUser

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>


<hr />
<div class="row">
    @{
        if (ViewBag.Message!=null)
        {
            <p style="color:red">@ViewBag.Message</p>
        }
    }
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
 
            <div class="form-group">
                <label asp-for="EmailId" class="control-label"></label>
                <input asp-for="EmailId" class="form-control" />
                <span asp-validation-for="EmailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
       
               
            </div>
                <div class="form-group">
                    
                        <dnt-captcha asp-captcha-generator-max="9999" 
                        asp-captcha-generator-min="1111" 
                        asp-captcha-generator-language="English" 
                        asp-captcha-generator-display-mode="ShowDigits"
                        asp-use-relative-urls="true"
                        asp-placeholder="Enter Captcha" 
                        asp-font-size="20"
                        asp-fore-color="#333333"
                        asp-font-name="Tahoma"
                        asp-back-color="#ccc"
                        asp-text-box-class="form-input" 
                        asp-validation-error-message="please Enter the Security Code" 
                        asp-validation-message-class="text-danger"
                        asp-refresh-button-class="fas fa-redo btn-sm"
                        asp-use-noise="false"
                      asp-text-box-template="<div class='input-group'><span class='input-group-prepend'><span class='input-group-text'></span></span>{0}</div>"/>

                   
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>

        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
